<link rel="stylesheet" href="/css/header.css">

<header>
    <div class="header-container">
        <div class="logo">
            <a href="/"><img src="/img/logo.jpg" alt="Logo"></a>
        </div>
        <nav class="navigation-menu">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/introduce">Giới thiệu</a></li>
                <li><a href="/health">Sức khỏe</a></li>
                <li><a href="/medical">Y tế</a></li>
                <li><a href="/environment">Môi trường sống</a></li>
            </ul>
        </nav>
        <div class="dropdown">
            {{#if username}}
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <img src="/uploads/avatars/{{profilePicture}}" alt="{{profilePicture}}">{{fullname}}
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="/admin">Quản lý</a></li>
                    <li><a class="dropdown-item" href="/profile">Thông tin cá nhân</a></li>
                    <li><a class="dropdown-item" href="/change-password1">Đổi mật khẩu</a></li>
                    <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
                </ul>
            {{else}}
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <img src="/uploads/avatars/default-avatar.png" alt="Tài khoản">Tài khoản
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="/login">Đăng nhập</a></li>
                    <li><a class="dropdown-item" href="/register">Đăng ký</a></li>
                </ul>
            {{/if}}
        </div>
    </div>
</header>