<link rel="stylesheet" href="/css/index.css">
<div>
    <!-- Bao bên ngoài cho cả ba section -->
    <div class="services-container">
        <!-- Section Theo dõi sức khỏe -->
        <section id="health-tracking">
            <img src="/img/health.png" alt="Health Tracking Icon" class="service-item">
            <h3>Theo dõi sức khỏe</h3>
        </section>

        <!-- Section Quản lý lịch trình y tế -->
        <section id="medical-schedule">
            <img src="/img/yte.png" alt="Medical Schedule Icon" class="service-item">
            <h3>Quản lý lịch trình y tế</h3>
        </section>

        <!-- Section Môi trường sống thú cưng -->
        <section id="environment-management">
            <img src="/img/environment.png" alt="Environment Management Icon" class="service-item">
            <h3>Môi trường sống thú cưng</h3>
        </section>
    </div>
</div>
<div class="container">
    <div class="content-container">
        <div class="notification-container">
            <div class="notification-header">
                <h2>Thông Báo</h2>
            </div>
            <div class="notification-content">
                <div class="row">
                    <div class="col-12">
                        <h5>NHẮC NHỞ GẦN ĐÂY:</h5>
                        {{#if latestNotification.length}}
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Ngày: {{latestNotification.[0].date}}</p>
                                    <p class="card-text">Sự kiện:
                                        {{#each latestNotification}}
                                            {{#if @first}}{{event}}
                                            {{else}}{{#if (gt @index 4)}}{{else}}, {{event}}{{/if}}
                                            {{/if}}
                                        {{/each}}
                                        {{#if (gt latestNotification.length 5)}}...{{/if}}
                                    </p>
                                </div>
                            </div>
                        {{else}}
                            <p>Không có nhắc nhở gần đây.</p>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h5>NHẮC NHỞ SẮP TỚI:</h5>
                        {{#if upcomingNotification.length}}
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Ngày: {{upcomingNotification.[0].date}}</p>
                                    <p class="card-text">Sự kiện:
                                        {{#each upcomingNotification}}
                                            {{#if @first}}{{event}}
                                            {{else}}{{#if (gt @index 4)}}{{else}}, {{event}}{{/if}}
                                            {{/if}}
                                        {{/each}}
                                        {{#if (gt upcomingNotification.length 5)}}...{{/if}}
                                    </p>
                                </div>
                            </div>
                        {{else}}
                            <p>Không có nhắc nhở sắp tới.</p>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h5>NHẮC NHỞ HÔM NAY:</h5>
                        {{#if todayNotification.length}}
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">Ngày: {{todayNotification.[0].date}}</p>
                                    <p class="card-text">Sự kiện:
                                        {{#each todayNotification}}
                                            {{#if @first}}{{event}}
                                            {{else}}{{#if (gt @index 4)}}{{else}}, {{event}}{{/if}}
                                            {{/if}}
                                        {{/each}}
                                        {{#if (gt todayNotification.length 5)}}...{{/if}}
                                    </p>
                                </div>
                            </div>
                        {{else}}
                            <p>Không có nhắc nhở hôm nay.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <img src="/img/mydieu.png" alt="Cat Image" class="cat-image">
</div>

<div class="background-image-container">
    <img src="/img/background.png" alt="Image" class="background-image">
</div>

<script src="/js/index.js"></script>